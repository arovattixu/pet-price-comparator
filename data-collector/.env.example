# Configurazioni di base
NODE_ENV=development
PORT=3000

# Configurazioni di MongoDB
MONGODB_URI=mongodb+srv://username:password@yourcluster.mongodb.net/pet-price-comparator?retryWrites=true&w=majority

# Configurazioni di Proxy (opzionali)
USE_PROXY=false
PROXY_HOST=127.0.0.1
PROXY_PORT=8118

# Percorsi
RESULTS_DIR=./results
DATA_DIR=./data
BACKEND_PATH=../backend

# Configurazioni di logging
LOG_LEVEL=info

# Configurazioni di scraping
SCRAPING_DELAY=2000
MAX_CONCURRENT_REQUESTS=2
RETRY_ATTEMPTS=3
TIMEOUT=30000

# Configurazioni sicurezza
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100